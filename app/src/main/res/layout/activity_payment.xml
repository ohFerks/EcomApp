<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Поле для имени -->
    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите ваше имя"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Поле для телефона -->
    <EditText
        android:id="@+id/phoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите номер телефона"
        android:inputType="phone"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Поле для адреса -->
    <EditText
        android:id="@+id/addressInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите адрес доставки"
        android:inputType="textPostalAddress"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Поле с ближайшей датой доставки -->
    <TextView
        android:id="@+id/deliveryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дата доставки: 00/00/0000"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Поле с информацией об операторе -->
    <TextView
        android:id="@+id/operatorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="В ближайшее время с вами свяжется наш оператор, чтобы указать время доставки продуктов"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <!-- Кнопка "Далее" -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Далее"
        android:backgroundTint="#0D7255"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка "Назад в корзину" -->
    <Button
        android:id="@+id/backToCartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад в корзину"
        android:backgroundTint="#EFEFEF"
        android:textColor="#000000"
        android:textSize="16sp" />
</LinearLayout>
